<div class="content">
  <div class="container">
<section id="main">
  <h3 class="c-head">留言</h3>
  <div class="clearfix"></div>
  <div class="singel_right">
    <div class="lcontact span_1_of_contact">
      <div class="contact-form">









            <%= form_for @contact do |f| %>
                <p class="comment-form-author"><label for="name">姓名:</label>


                  <%= f.text_field :name,class:"textbox",placeholder:'请填写您的姓名' %>
                </p>

                <p class="comment-form-author"><label for="title">标题:</label>

                  <%= f.text_field :title,class:"textbox",placeholder:'标题'  %>
                </p>

                <p class="comment-form-author"><label for="title">电话:</label>

                  <%= f.text_field :tel,class:"textbox",placeholder:'电话'  %>
                </p>

                <p class="comment-form-author"><label for="message">内容:</label>

                  <%= f.text_area :content,class:"textbox",placeholder:'内容'  %>
                </p>

               <%= f.submit '确定'%>

            <% end %>


















            </div>
    </div>

    <div class="clearfix"></div>
  </div>


  <div class="clearfix"></div>
</section>
      </div>
    </div>