<div class="content">
  <div class="container">
<section id="main">
  <h3 class="c-head">留言</h3>
  <div class="clearfix"></div>
  <div class="singel_right">
    <div class="lcontact span_1_of_contact">
      <div class="contact-form">









            <%= form_for @contact do |f| %>
                <p class="comment-form-author"><label for="name">姓名:</label>
                  <input type="text" class="textbox" value="Enter your name here..." onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Enter your name here...';}">

                  <%= f.text_field :name,class:"textbox",placeholder:'asdfasdfasd' %>
                </p>

                <p class="comment-form-author"><label for="title">标题:</label>

                  <%= f.text_field :title %>
                </p>

                <p class="comment-form-author"><label for="title">电话:</label>

                  <%= f.text_field :tel %>
                </p>

                <p class="comment-form-author"><label for="message">内容:</label>

                  <%= f.text_area :content %>
                </p>

               <%= f.submit%>

            <% end %>


















            </div>
    </div>

    <div class="clearfix"></div>
  </div>


  <div class="clearfix"></div>
</section>
      </div>
    </div>