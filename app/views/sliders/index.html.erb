
<%= render 'top' %>
<%= render 'adminmenu'  %>

<div id="main">
  <div class="breadcrumb-wrapper">
    <div class="container">

      <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 row">
        <h3 class="title">主页图片</h3>
        <table class="table table-striped table-bordered">
          <thead>
          <tr>
            <th>链接</th>
            <th>图片</th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
          <% @rolls.each do |slider| %>
              <tr>
                <td><%= slider.link %></td>
                <td><%= image_tag slider.image_file_name,Height:100 %></td>

                <td><%= link_to '',edit_slider_path(slider),class:"icon-pencil" %>&nbsp;<%= link_to '', slider, method: :delete, data: { confirm: 'Are you sure?' },class:"icon-trash" %></td>
              </tr>
          <% end %>

          </tbody>
        </table>

        <a class="btn-small btn-color btn-pad pull-right" href=<%= new_slider_path %>>创建</a>
      </div>


    </div>
  </div>
</div>



