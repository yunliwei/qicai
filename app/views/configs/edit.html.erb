<%= render 'top' %>
<%= render 'adminmenu' %>
<div class="container">
  <div class="content">
<h1>联系方式</h1>
<br>
<br>
<%= form_for(@config, :html => {:class=>'form-horizontal m-t',id:"signupForm",:multipart => true}) do |f| %>
    <div class="form-group">
      <label class="col-sm-3 control-label">电话：</label>
      <% if public_config %>
      <div class="col-sm-5">
        <%= f.text_field :tel ,class:"form-control"%>
      </div>
          <% end %>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">QQ号码：</label>
      <% if public_config %>
      <div class="col-sm-5">
        <%= f.text_field :qq ,id:"qq",class:"form-control"%>
      </div>
      <% end %>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">地址：</label>
      <% if public_config %>
      <div class="col-sm-5">
        <%= f.text_field :address ,class:"form-control"%>
      </div>
      <% end %>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">Logo图片：</label>
      <% if public_config %>
      <div class="col-sm-3">
        <%= f.file_field :logo ,class:"form-control"%>
      </div>
    <% end %>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">备案：</label>
      <% if public_config %>
      <div class="col-sm-5">
        <%= f.text_field :beian ,class:"form-control"%>
      </div>
      <% end %>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">邮箱：</label>
      <% if public_config %>
      <div class="col-sm-5">
        <%= f.text_field :mail ,class:"form-control"%>
      </div>
      <% end %>
    </div>
    <div class="form-group">
      <div class="subscribe">
        <%= f.submit '确定',class:"btn-small btn-color btn-pad pull-right" %>
    </div>
    </div>
        </div>
        </div>

<% end %>
    <%= render 'dibu' %>