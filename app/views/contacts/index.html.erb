<%= render 'top' %>
<%= render 'adminmenu' %>
<script charset="utf-8" src="/editor/kindeditor.js"></script>
<script charset="utf-8" src="/editor/lang/zh-CN.js"></script>
<%= render 'adminmenu' %>
<div id="main">
  <div class="breadcrumb-wrapper">
    <div class="container">
      <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 row ">
        <h3 class="title">留言</h3>
        <br>
        <br>
        <table class="table table-striped table-bordered">
          <thead>
          <tr>

            <th>姓名</th>
            <th>主题</th>
            <th>联系方式</th>
            <th>创建时间</th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
          <%@abouts.each do |f| %>
              <tr>
                <td><%= f.name %></td>
                <td><%= link_to f.title,about_path(f)%></td>
                <td><%= f.information %></td>
                <td><%= f.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                <td><%= link_to '查看',edit_about_path(f),class:"icon-pencil",'data-no-turbolink' => true %>&nbsp;<%= link_to '删除',f, method: :delete, data: { confirm: 'Are you sure?' },class:"icon-trash" %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <%= link_to '返回',new_about_path,class:"btn-small btn-color btn-pad pull-right",'data-no-turbolink' => true %>
      </div>
    </div>
  </div>
</div>
