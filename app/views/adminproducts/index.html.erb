<%= render 'top'%>
<%= render 'adminmenu'  %>
<div class="container">
  <h1>产品中心</h1>
  </div>
<br>
<br>
<div class="col-lg-12">
  <div class="ibox float-e-margins container">
    <div class="ibox-title">
      <h5></h5>

    </div>
    <div class="ibox-content">

      <table class="table table-hover table-bordered">
        <thead>
        <tr>
          <th  style="text-align:center">产品类型</th>
          <th style="text-align:center">产品名称</th>
          <th style="text-align:center">价格</th>
          <th style="text-align:center">产品描述</th>
          <th style="text-align:center">显示在主页</th>
          <th style="text-align:center">编辑</th>
        </tr>
        </thead>
        <tbody>
        <% @leftcontent.each do |f| %>
            <tr>
              <td>
                <%@section=Productcla.find(f.productcla_id)%><%=@section.name%> <%= f.productcla_id %>
              </td>
              <td style="text-align:center">
                <%= f.name %>
              </td>
              <td style="text-align:center">
                <%= f.price %>
              </td>
              <td style="text-align:center">
                <%= f.summary %>
              </td>
              </td>

              <td>
                <input type="checkbox" value="1" name="roles[]" id="roles_" class="center">
                <label for="SuperAdmin"></label>
              </td>

              <td>

                <%= link_to "编辑", edit_adminproduct_path(f),class: "fa fa-pencil" %>&nbsp;
                <%= link_to '删除', adminproduct_path(f), class: "fa fa-trash", method: :delete, data: { confirm: 'Are you sure?' } %>

            </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to "新建", new_adminproduct_path,class: "btn btn-w-m btn-success mylink pull-right",'data-no-turbolink'=>true %>
      <br>
    </div>

  </div>
</div>










