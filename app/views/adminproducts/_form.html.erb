

<div class="container">
  <h1>产品中心</h1>
</div>
<script type="text/javascript" language="JavaScript">

  function get_zhuangye(){
    document.getElementById("hidden_zhuangye").value=document.getElementById("select_zhuangye").value;
  }

  $(document).ready(function () {


    var a = document.getElementById("select_zhuangye");
    a.options[0].selected = true;
    document.getElementById("hidden_zhuangye").value=document.getElementById("select_zhuangye").value;



  });



</script>
<%= form_for(@adminproduct, :html => {:class=>'form-horizontal m-t',id:"signupForm",:multipart => true}) do |f| %>
    <div class="form-group">
      <label class="col-sm-3 control-label">产品名称：</label>
      <div class="col-sm-5">
        <%= f.text_field :name ,class:"form-control"%>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">价格：</label>
      <div class="col-sm-5">
        <%= f.text_field :price ,id:"price",class:"form-control"%>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">产品描述：</label>
      <div class="col-sm-5">
        <%= f.text_field :summary ,class:"form-control"%>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label">产品内容:</label>
      <div class="col-sm-5">
        <%= f.text_area :content ,class:"form-control",id:"status",col:"100"%>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">产品类型：</label>
      <div class="col-sm-5">
        <%= f.number_field :productcla_id , class:"form-control",id:"hidden_zhuangye" %>
        <select class="form-control m-b" id="select_zhuangye" name="account" onchange="get_zhuangye()">
        </select>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">选择图片：</label>
      <div class="col-sm-3">
        <%= f.file_field :image ,class:"form-control"%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-4 col-sm-offset-3">
        <%= f.submit '提交',class:"btn btn-sucess" %>
      </div>
    </div>
    </div>
<% end %>