<%= form_for(@adminproduct, :html => {:class=>'form-horizontal m-t',id:"signupForm",:multipart => true}) do |f| %>


    <div class="form-group">
      <label class="col-sm-3 control-label">姓名：</label>
      <div class="col-sm-5">
        <%= f.text_field :name ,class:"form-control"%>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">价格：</label>
      <div class="col-sm-5">
        <%= f.text_field :price ,id:"price",class:"form-control"%>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">产品描述：</label>
      <div class="col-sm-5">
        <%= f.text_field :summary ,class:"form-control"%>
      </div>
    </div>


    <div class="form-group">
      <label class="col-sm-3 control-label">产品内容:</label>
      <div class="col-sm-5">
        <%= f.text_field :content ,class:"form-control",id:"status",value:"1"%>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label">选择图片：</label>
      <div class="col-sm-3">
        <%= f.file_field :image ,class:"form-control"%>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-4 col-sm-offset-3">
        <%= f.submit 'tijiao',class:"btn btn-sucess" %>



      </div>
    </div>
    </div>
<% end %>
