    <div class="container">
      <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 row ">
        <h3 class="title">新闻中心</h3>
        <br>
        <br>
        <table class="table table-striped table-bordered">
          <thead>
          <tr>
            <th>标题</th>
            <th>创建时间</th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
          <%@adminnews.each do |f| %>
              <tr>
                <td><%= f.title %></td>
                <td><%= f.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                <td><%= link_to '编辑',edit_adminnew_path(f),class:"icon-pencil",'data-no-turbolink' => true %>&nbsp;<%= link_to '删除',f, method: :delete, data: { confirm: 'Are you sure?' },class:"icon-trash" %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <%= link_to '创建新闻',new_adminnews_path,class:"btn-small btn-color btn-pad pull-right",'data-no-turbolink' => true %>
      </div>
